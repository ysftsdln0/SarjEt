# =================================
# SarjEt Projesi - Environment Variables Example
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# =================================

# =================================
# EXPO/REACT NATIVE ENVIRONMENT VARIABLES
# =================================

# Backend API URL - Kendi IP adresinizi yazın
EXPO_PUBLIC_BACKEND_URL=http://172.20.10.2:3000

# Mapbox Access Token - https://mapbox.com'dan alın
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here

# Google Maps API Key - https://console.cloud.google.com'dan alın
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Analytics ve Crash Reporting (İsteğe bağlı)
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here_optional

# App Store / Play Store konfigürasyonu (İsteğe bağlı)
EXPO_PUBLIC_APP_VERSION=1.0.0

# =================================
# BACKEND/SERVER ENVIRONMENT VARIABLES
# =================================

PORT=3000
NODE_ENV=development

# Güçlü bir JWT secret oluşturun
JWT_SECRET=your_very_strong_jwt_secret_key_here_at_least_32_characters_long

# PostgreSQL database URL'nizi yazın
DATABASE_URL=postgresql://username:password@localhost:5432/sarjet_db

# OpenChargeMap API key - https://openchargemap.org/site/develop/api
OPENCHARGE_MAP_API_KEY=your_opencharge_map_api_key_here

# Geocoding Service API (isteğe bağlı - şu anda Nominatim kullanılıyor)
# OPENCAGE_API_KEY=your_opencage_api_key_optional
# HERE_API_KEY=your_here_api_key_optional

# Email Service (gelecekte kullanılabilir)
# SENDGRID_API_KEY=your_sendgrid_api_key_optional
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Redis Cache (İsteğe bağlı)
# REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_if_needed

# Cache ayarları (saniye cinsinden)
CACHE_TTL_STATIONS=3600
CACHE_TTL_ROUTES=1800
CACHE_TTL_GEOCODING=86400

# Rate limiting ayarları
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

LOG_LEVEL=info
BACKEND_IP=192.168.1.100
