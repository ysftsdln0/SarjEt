{
  "name": "sarjet-backend",
  "script": "src/server.js",
  "cwd": "/opt/SarjEt/backend",
  "instances": 1,
  "exec_mode": "fork",
  "watch": false,
  "max_memory_restart": "1G",
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "log_file": "/var/log/sarjet-backend/combined.log",
  "out_file": "/var/log/sarjet-backend/out.log",
  "error_file": "/var/log/sarjet-backend/error.log",
  "log_date_format": "YYYY-MM-DD HH:mm Z",
  "merge_logs": true
}
